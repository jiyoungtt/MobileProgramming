<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/sub_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="1차 입력"/>
    <!--1차데이터를 입력하는 EditText-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/sub_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="2차 입력"/>
        <!--sub2에서 입력받은 데이터를 표시-->


        <Button
            android:id="@+id/toSub2_btn"
            android:onClick="toSub2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2차 데이터 입력"/>
        <!--sub2로 이동하는 버튼-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@+id/sub_okbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="입력완료"/>
         <!--입력받은 모든 데이터를 mainactivity에 전달하는 버튼-->

        <Button
            android:id="@+id/sub_cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="취소"/>
        <!--취소버튼-->

    </LinearLayout>





</LinearLayout>